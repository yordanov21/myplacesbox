@model MyPlacesBox.Web.ViewModels.Hikes.HikesListInputModel
@{
    this.ViewData["Title"] = "All Hikes";
}

<div class="d-flex justify-content-between">
    <h1>@this.ViewData["Title"]</h1>
    <h3 style="margin-right:20px;">page @Model.PageNumber</h3>
</div>

<hr />
<div class="alert">
    @foreach (var hike in this.Model.Hikes)
    {
        <a  asp-action="ById" asp-route-id="@hike.Id">
            <div class="media" style="transition: .5s; transform: scale(1.05); ">
                <img src="@hike.ImageUrl" width="150" class="all-image mr-3 img-responsive" alt="..." style="object-fit: cover;  height:150px; max-width:100%; ">
                <div class="media-body">
                    <h5 class="mt-0 text-decoration-none"><a asp-action="ById" asp-route-id="@hike.Id" >@hike.Name</a></h5>
                    <p>@(hike.Description.Length<400? hike.Description: hike.Description.Substring(0, 400))...</p>
                    <ul class="list-item-meta">
                        <li>@hike.CategoryName</li>
                        <li>
                            <small class="glyphicon glyphicon-star" aria-hidden="true">@hike.RegionName</small>
                        </li>
                    </ul>
                </div>
            </div>
        </a>
    }
</div>

<div>
    <hr />
    <partial name="_PagingPartial" model="@Model" />
</div>